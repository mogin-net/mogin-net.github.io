include /navigation.pug

doctype html
html(lang="en")
  head
    block title
    - var headerTitle = title ? `PT. Mogin Technology Terpadu :: ${title}` : "PT. Mogin Technology Terpadu"
    title #{headerTitle}
    meta(charset="utf-8")/
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")/
    meta(property="og:url" content="https://mogin.net")/
    meta(property="og:title" content=headerTitle)/
    meta(property="og:description" content="Enterprise Application Development, IT Consulting, Engineering")/
    meta(property="og:image" content="https://mogin.net/img/mogin_300_300.jpg")/
    meta(property="og:type" content="website")/
    meta(property="og:locale" content="en_US")/
    link(rel="stylesheet" href="/css/main.css")/
    noscript: link(rel="stylesheet" href="/css/noscript.css")/
  body.is-preload
    // Wrapper 
    #wrapper
      // Navigation 
      block navigation
        +navigate

      // Main Content 
      #main
        block content


      // Footer 
      #footer
        ul.copyright 
          li#copyright &copy; 2021 - #{new Date().getFullYear()}
          li PT. Mogin Technology Terpadu
          li 
            a(href="/credits.html") Credits
    include ./scripts.pug